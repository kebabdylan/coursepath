<h1>Listing steps</h1>

<table class="table table-striped">
  <tr>
	<th>Course</th>
    <th>Step</th>

    <th>Priority</th>
    <th></th>

  </tr>

<% @steps.each do |step| %>
  <tr>
	<td><%= step.course.code %>-<%= step.course.number %></td>
    <td><%= step.title %></td>

    <td><%= step.priority %></td>
    <td nowrap="true">
		<%= link_to 'Show', step %>
		<%= link_to 'Edit', edit_step_path(step) %>
		<%= link_to 'Destroy', step, confirm: 'Are you sure?', method: :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Step', new_step_path %>
