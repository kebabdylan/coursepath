<h1>Listing steps</h1>

<table>
  <tr>
	<th>Step</th>
    <th>Title</th>
    <th>Description</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @steps.each do |step| %>
  <tr>
	<td><%= step.course.code %>-<%= step.course.number %></td>
    <td><%= step.title %></td>
    <td><%= step.description %></td>
    <td><%= step.priority %></td>
    <td><%= link_to 'Show', step %></td>
    <td><%= link_to 'Edit', edit_step_path(step) %></td>
    <td><%= link_to 'Destroy', step, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

